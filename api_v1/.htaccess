# Włącz mod_rewrite
RewriteEngine On

# Jeśli ktoś wchodzi na /api bez index.php, przekieruj do index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^$ index.php [L]

# Wszystkie requesty przekieruj do index.php, zachowując query string
RewriteRule ^(.*)$ index.php [L,QSA]
